@media screen and (min-width 768px) and (max-width 991px)
  .main-filter
    margin-left -41%
    left 41%
    right 0

  .place
    margin-bottom 0 !important
    .form-control
      entire_section()

  .from
    padding-left 0
    input
      width 100% !important
      margin-right 0

  .to
    padding-right 0
    input
      width 100% !important

  .button_search
    entire_section()
    padding-bottom 6%
    button
      entire_section()

  .col-sm-6
    margin-bottom 5px

@media screen and (min-width 992px)
  .main-filter
    margin-left -25%
    left 50%
    right 25%
    .row
      display inline-block

  .place
    margin-bottom 0 !important
    .form-control
      margin-left 0

shadow(hoff, voff, blur, color)
  -webkit-box-shadow: hoff voff blur color
  -moz-box-shadow: hoff voff blur color
  box-shadow: hoff voff blur color

.row
  margin-left 0
  margin-right 0

.swiper-container
  width 100%
  height 100%
  position fixed

.another-shade
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  background-color rgba(0, 0, 0, 0.4)
  z-index 50

.swiper-slide
  background-position center
  background-size cover

.swiper-pagination
  z-index 51

[class^=swiper-button]
  display none

#content.container-fluid
  position absolute
  top 100%
  z-index 50
  width 100%
  background-color #fff
  shadow(0, 0, 0, 0.8)
  padding-left 0
  padding-right 0
