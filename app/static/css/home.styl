center(wo)
  margin-left 0% - (wo / 2)
  left 50%

entire_section()
  display block !important
  width 100% !important

half_section()
  display inline-block !important
  width 50% !important

.row
  margin 0

.col-sm-6
  padding 0 !important

@media screen and (max-width 767px)
  .main-filter
    top 27%
    margin-left -41%
    left 41%
    right 0

  .place
    margin-bottom 0 !important
    .form-control
      entire_section()

  .col-sm-6
    margin-bottom 0 !important

  .from
    entire_section()
    input
      entire_section()

  .to
    entire_section()
    input
      entire_section()

  .button_search
    entire_section()
    padding-bottom 6%
    button
      entire_section()

